{% extends 'base.twig' %}

{% block main %}
    <main>
        <section class="container">
            {# Each Heading #}
            {% for heading in showHeading %}
                <h1 class="text-ln-gold-ghost">{{ heading.name }}</h1>
                <div class="row justify-content-around align-items-center">
                    {# Each Category #}
                    {% for category in showCategory if category.idHeading == heading.id %}
                        <div class="block--category rounded col-lg-5 col-11 my-2 p-0"
                             style="background: url('/web/img/category/{{ category.img }}') no-repeat center;background-size: cover;">
                            <div class="text-center pt-3 px-3">
                                <a href="/forum/{{ category.slug }}">
                                    <h5>{{ category.name }}</h5>
                                    <p class="text-justify">
                                        {{ category.content }}
                                    </p>
                                </a>
                            </div>
                            <div>
                                <p class="px-3">
                                    {% for last in lastMessage if last.subcatId == subcat.id %}
                                        <a href="/forum/{{ last.slug }}/topic-{{ last.idTopic }}">
                                            Dernier message il y a {{ last.dateMessage|time_diff }}
                                        </a>
                                    {% endfor %}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </section>
    </main>
{% endblock main %}